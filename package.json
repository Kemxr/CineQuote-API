{
  "name": "cine-quote-api",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "nodemon --env-file=.env",
    "dev:client": "cd ./frontend/cine-quote-frontend && npm run dev",
    "start": "node ./bin/start",
    "test": "cross-env NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules jest --detectOpenHandles --forceExit",
    "test:coverage": "cross-env NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "seed": "node ./seed.js",
    "clear": "node ./clear.js"
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "debug": "^4.4.1",
    "express": "^5.1.0",
    "http-errors": "^2.0.0",
    "js-yaml": "^4.1.1",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.19.1",
    "morgan": "^1.10.1",
    "node-fetch": "^3.3.2",
    "socket.io": "^4.8.1",
    "swagger-ui-express": "^5.0.1",
    "web-push": "^3.6.7",
    "wsmini": "^1.2.0"
  },
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "dotenv": "^17.2.3",
    "jest": "^30.2.0",
    "mongodb-memory-server": "^10.4.1",
    "nodemon": "^3.1.10",
    "sharp": "^0.34.5",
    "supertest": "^7.1.4"
  }
}
